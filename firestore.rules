rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Regras para usuários
    match /users/{userId} {
      // Permite qualquer usuário autenticado ler qualquer perfil de usuário
      allow read: if request.auth != null;
      // Permite criar e atualizar apenas o próprio perfil
      allow write: if request.auth != null && request.auth.uid == userId;
      // Permite criar durante o registro
      allow create: if request.auth != null;
    }
    
    // Regras para eventos
    match /events/{eventId} {
      // Permite qualquer usuário autenticado ler qualquer evento
      allow read: if request.auth != null;
      // Permite criar eventos
      allow create: if request.auth != null;
      // Permite atualizar e deletar apenas eventos próprios
      allow update, delete: if request.auth != null && 
        (resource.data.userId == request.auth.uid || 
         request.auth.uid == request.resource.data.userId);
    }
  }
}